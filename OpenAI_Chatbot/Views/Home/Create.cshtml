@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ehwqs4M6RLLsU1m4Dw9ka3FVrPQIk0FRIW3h6Nf3jvaH4a4Ipz46jcCJi0J+g1DT" crossorigin="anonymous">
    <link href="styles.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1>Create Request</h1>
        <form id="chatForm" method="post" action="/Home/Get">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="option" value="Need answer" checked>
                <label class="form-check-label">Need answer</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="option" value="Need code">
                <label class="form-check-label">Need code</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="option" value="Need suggestion">
                <label class="form-check-label">Need suggestion</label>
            </div>
            <div class="form-group">
                <label for="prompt">Enter your prompt:</label>
                <input type="text" class="form-control" id="prompt" name="prompt" required>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</body>
</html>
