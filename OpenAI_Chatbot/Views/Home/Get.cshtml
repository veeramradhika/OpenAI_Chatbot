@{
    ViewData["Title"] = "Get Response";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ehwqs4M6RLLsU1m4Dw9ka3FVrPQIk0FRIW3h6Nf3jvaH4a4Ipz46jcCJi0J+g1DT" crossorigin="anonymous">
    <link href="styles.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1>Generated Response</h1>
        <p><strong>User selected:</strong> @ViewBag.UserOption</p>
        <p><strong>Prompt:</strong> @ViewBag.Prompt</p>
        @if (ViewBag.Response != null)
        {
            <p><strong>Generated Response:</strong></p>
            <div>
                <pre>@ViewBag.Response</pre>
            </div>
        }

        @if (ViewBag.EmailSent != null)
        {
            <div>
                <p>Email sent successfully!</p>
            </div>
        }

        @if (ViewBag.Response != null)
        {
            <form id="emailForm" method="post" action="/Home/SendEmail">
                <input type="hidden" name="response" value="@ViewBag.Response" />
                <div class="form-group">
                    <label for="email">Enter your email address:</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <button type="submit" class="btn btn-primary">Send Email</button>
            </form>
        }
    </div>
</body>
</html>
